@model SIMS_SE06205.Models.StudentModel
@{

    ViewData["title"] = "Student managment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
    <div class="col col-sm-12 col-md-12 p-3">
        <h3> Lists Student </h3>
        <a class="btn btn_primary my-5" href="@Url.Action("Add","Student")">Add new</a>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Code</th>
                    <th>First NAME</th>
                    <th>LAST NAME</th>
                    <th>EMAIL</th>
                    <th>PHONE</th>
                    <th>ADDRESS</th>
                    <th>GENDER</th>
                    <th>BIRTHDAY</th>



                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StudentLists)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Code</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Address</td>
                        <td>@item.Gender</td>
                        <td>@item.BirthDay</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update","Student", new { id = @item.Id })">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Student", new { id = @item.Id })">Delete</a>
                        </td>
                      
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
